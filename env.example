# Bybit API Settings
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_BASE_URL=https://api-testnet.bybit.com
# Для продакшена используйте: BYBIT_BASE_URL=https://api.bybit.com

# Admin Panel Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
FLASK_SECRET_KEY=your_flask_secret_key_here_change_in_production

# Trading Settings
TRADING_SYMBOL=SOLUSDT  # Deprecated, use ACTIVE_SYMBOLS and PRIMARY_SYMBOL
TIMEFRAME=15m
LEVERAGE=3

# Multi-Symbol Trading (NEW)
# Comma-separated list of symbols to trade simultaneously
ACTIVE_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT
# The default symbol to show in the UI (must be in ACTIVE_SYMBOLS)
PRIMARY_SYMBOL=BTCUSDT

# Strategy Settings
ENABLE_TREND_STRATEGY=true
ENABLE_FLAT_STRATEGY=true
ENABLE_ML_STRATEGY=false
ML_MODEL_PATH=ml_models/xgb_SOLUSDT_15.pkl
ML_CONFIDENCE_THRESHOLD=0.7
ML_MIN_SIGNAL_STRENGTH=среднее
ML_STABILITY_FILTER=true
ML_TARGET_PROFIT_PCT_MARGIN=0.025
ML_MAX_LOSS_PCT_MARGIN=0.01
STRATEGY_PRIORITY=trend

# ADX Trend Filter (4H)
ADX_THRESHOLD=25.0
ADX_LENGTH=14
DI_LENGTH=14

# Breakout Strategy
BREAKOUT_LOOKBACK=20
BREAKOUT_VOLUME_MULT=1.0

# SMA Pullback Strategy
SMA_LENGTH=20
PULLBACK_TOLERANCE=0.002
VOLUME_SPIKE_MULT=1.0

# Consolidation Breakout Strategy
CONSOLIDATION_BARS=8
CONSOLIDATION_RANGE_PCT=0.004

# RSI Settings
RSI_LENGTH=14
RSI_FLOOR=35.0
RSI_CEILING=65.0

# Bollinger Bands (Range Strategy)
BB_LENGTH=20
BB_STD=2.0
RANGE_RSI_OVERSOLD=30.0
RANGE_RSI_OVERBOUGHT=70.0
RANGE_VOLUME_MULT=1.3
RANGE_TP_AGGRESSIVE=false
RANGE_STOP_LOSS_PCT=0.015

# Risk Management
MAX_POSITION_USD=200.0
BASE_ORDER_USD=50.0
ADD_ORDER_USD=50.0
STOP_LOSS_PCT=0.01
TAKE_PROFIT_PCT=0.02
BALANCE_PERCENT_PER_TRADE=20.0

# Loss Cooldown Protection
ENABLE_LOSS_COOLDOWN=true
LOSS_COOLDOWN_MINUTES=60
MAX_CONSECUTIVE_LOSSES=2

# Trailing Stop Loss
ENABLE_TRAILING_STOP=true
TRAILING_STOP_ACTIVATION_PCT=0.005
TRAILING_STOP_DISTANCE_PCT=0.003

# Partial Close
ENABLE_PARTIAL_CLOSE=true
PARTIAL_CLOSE_PCT=0.5
PARTIAL_CLOSE_AT_TP_PCT=0.5

# Profit Protection
ENABLE_PROFIT_PROTECTION=true
PROFIT_PROTECTION_ACTIVATION_PCT=0.01
PROFIT_PROTECTION_RETREAT_PCT=0.003

# Breakeven
ENABLE_BREAKEVEN=true
BREAKEVEN_ACTIVATION_PCT=0.005

# Smart Add
ENABLE_SMART_ADD=true
SMART_ADD_PULLBACK_PCT=0.002

# ATR Entry Filter
ENABLE_ATR_ENTRY_FILTER=true
MAX_ATR_PROGRESS_PCT=0.7
